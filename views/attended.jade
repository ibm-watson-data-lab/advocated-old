doctype html
html(lang="en")
head
  include head.jade
body.capped-layout
  header.capped-layout_cap.app-banner
    span.app-banner_title IBM Cloud Data Services // Dev
    
  div.capped-layout_body.bookend-layout
    nav.bookend-layout_bookend.theme_light.bg_white
      include nav.jade
      
    div.bookend-layout_body.theme_dark
      //-section.layout_section.theme_light
        //-h1.type_heading
          //-mark.type_mark Attended an Event
      
      section.layout_section
        h1.type_heading
          mark.type_mark Attended an Event
          
        form(id="attended")
          div.form_standard
            input(type="hidden",name="collection",value="event")
            if doc._id
             input(type="hidden",name="_id",value="#{doc._id}")
            if doc._rev
             input(type="hidden",name="_rev",value="#{doc._rev}")
            
            div.form_field
              label.form_label(for="eventtitle") Title 
                span.type_mark *
              input.input_text.input_wide#eventtitle.form-control(name="title",type="text",placeholder="Event Title",value="#{doc.title}",required="true")
        
            div.form_field
              label.form_label(for="eventstart") Date Start
              input.input_text.input_wide#eventstart.form-control(name="dtstart",type="date",placeholder="YYYY-MM-DD",value=(doc.dtstart ? "#{doc.dtstart}" : ""))
              
            div.form_field
              label.form_label(for="eventend") Date End
              input.input_text.input_wide#eventend.form-control(name="dtend",type="date",placeholder="YYYY-MM-DD",value=(doc.dtend ? "#{doc.dtend}" : ""))
        
            div.form_field
              label.form_label(for="eventdescription") Description
              textarea.input_textarea.input_wide#eventdescription.form-control(name="description") #{doc.description}
        
            div.form_field
              label.form_label(for="eventattendees") Attendees
              input.input_text.input_wide#eventattendees.form-control(name="attendees",type="number",placeholder="the approximate number of attendees at the event",value="#{doc.attendees}")
        
            div.form_field
              label.form_label(for="eventleads") Leads
              input.input_text.input_wide#eventleads.form-control(name="leads",type="number",placeholder="the approximate number of leads generated at the event",value="#{doc.leads}")

            div.form_field
             h3 Categories
             div.checkbox
               label
               input(name="categories",type="checkbox",value="Conference")
               | Conference
             div.checkbox
               label
               input(name="categories",type="checkbox",value="Meetup")
               | Meetup
             div.checkbox
               label
               input(name="categories",type="checkbox",value="Hackathon")
               | Hackathon
                      
            div.form_field
              h3 IBM Sponsored
              div.checkbox
                label
                input(name="sponsored",type="checkbox",value="Sponsored")
                | Yes

            div.form_field
              label.form_label(for="eventtags") Tags
              input.input_text.input_wide#eventtags.form-control(name="tags",type="text",placeholder="e.g. Node,Geo",value=(doc.tags ? "#{doc.tags}" : ""))
  
            div.form_field
              label.form_label(for="eventcomments") Comments
              textarea.input_textarea.input_wide#eventcomments.form-control(name="comments") #{doc.comments}
      
            div.type_mark.type_copy * Required
            div#error
            div#message            
       
            if doc._id
             button.button_primary(type="submit") Update
            else
             button.button_primary(type="submit") Submit
      
            script.
              $( document ).ready(function() {
                initCheckboxes('#{doc.sponsored}', '#{doc.categories}');
              });